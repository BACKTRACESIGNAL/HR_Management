<Window x:Class="HR_Management.View.HR_Window.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HR_Management.View.HR_Window"
        mc:Ignorable="d"
        DataContext="DLoginViewModel"
        Title="LoginWindow" Height="450" Width="500" FontSize="14" Background="White">
    <Border Background="Purple" CornerRadius="100" Margin=" 20">
        <StackPanel Margin="50">
            <Label Content="Login" Foreground="White" FontSize="45" HorizontalContentAlignment="Center"></Label>
            <Separator></Separator>
            <Label Content="Username:" Foreground="White"></Label>
            <TextBox Name="txtUsername" Background="#CFC3D2" Foreground="Purple" FontSize="18" ></TextBox>
            <Label Content="Password:" Foreground="White"></Label>
            <PasswordBox Name="txtPassword" Background="#CFC3D2" Foreground="Purple" FontSize="18" ></PasswordBox>
            <Button Name="btnSummit" Width="100" Content="Summit" Margin="40 " Background="White" Foreground="Purple" FontSize="18"></Button>
        </StackPanel>
    </Border>
</Window>
